{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es5",
    "lib":["dom", "es6", "dom.iterable", "scripthost", "es2016.array.include", "es2015.promise", "es2017"],
    "sourceMap": false,
    "strictNullChecks": true,
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": true,
    "outDir": "./lib/",
    "declaration": true,
    "declarationDir": "./lib/types/"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}